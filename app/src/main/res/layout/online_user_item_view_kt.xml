<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_online_user"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tom_cruise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_online_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingVertical="6dp"
            android:textColor="#B1B1B1"
            android:textSize="15sp"
            android:maxLength="8"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_online_user"
            android:visibility="visible"
            tools:text="Ikbal hoosen" />

        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/active_circle_view"
            app:layout_constraintBottom_toBottomOf="@+id/iv_online_user"
            app:layout_constraintEnd_toEndOf="@+id/iv_online_user"
            app:layout_constraintHorizontal_bias="0.771"
            app:layout_constraintStart_toStartOf="@+id/iv_online_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>