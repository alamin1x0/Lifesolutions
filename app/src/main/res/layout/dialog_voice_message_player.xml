<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/close_button_music_player_dialog"
        android:layout_alignParentEnd="true"
        android:text="@string/x"
        android:textSize="20sp"
        android:layout_marginTop="-8dp"
        android:textColor="@color/colorMain"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/play_pause_button_music_player_dialog"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:tint="@color/colorMain"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/timer_music_player_dialog"
        android:textColor="@color/text_color_dark"
        android:text="@string/_00_00"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/play_pause_button_music_player_dialog"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekbar_music_player_dialog"
        android:layout_toEndOf="@id/timer_music_player_dialog"
        android:layout_below="@+id/play_pause_button_music_player_dialog"
        android:layout_toStartOf="@+id/duration_music_player_dialog"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/duration_music_player_dialog"
        android:textColor="@color/text_color_dark"
        android:text="@string/_00_00"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/play_pause_button_music_player_dialog"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>