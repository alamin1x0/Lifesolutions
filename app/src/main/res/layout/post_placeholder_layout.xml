<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_placeholder"
            android:layout_width="50dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@color/viewColor"
            android:layout_height="50dp"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:layout_marginEnd="80dp"
            android:layout_toEndOf="@+id/user_image_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/viewColor"
                android:id="@+id/user_name_placeholder"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_post_item"
                android:textSize="12sp"
                android:background="@color/viewColor"
                android:layout_below="@+id/user_name_placeholder"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/post_title_placeholder"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:background="@color/viewColor"
        android:textColor="@color/text_color_light"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@color/viewColor"
        android:scaleType="centerCrop"
        android:id="@+id/post_image_placeholder"
        tools:ignore="ContentDescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/viewColor"
        tools:ignore="DisableBaselineAlignment">

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_line_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/viewBackground"
        tools:ignore="ContentDescription" />

</LinearLayout>