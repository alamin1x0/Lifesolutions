<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_width="300dp"
    android:background="@drawable/alert_dialog_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/alert_dialog_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover_image_image_upload_dialog"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:src="@drawable/user"
            android:id="@+id/profile_image_image_upload_dialog"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quit_button_image_dialog"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:textAlignment="center"
                android:focusable="true"
                android:text="@string/quit"
                android:textAllCaps="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:backgroundTint="@color/red_overlay"
                android:background="@drawable/button_backgroun_game"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/upload_button_image_dialog"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="@string/save"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:backgroundTint="@color/green_overlay"
                android:background="@drawable/button_backgroun_game"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>