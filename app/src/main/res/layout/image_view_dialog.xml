<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:id="@+id/singleview"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_picked_image"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rocket_logo" />
            </LinearLayout> <!-- Single Image View -->


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/singleview2"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/iv_picked_image2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rocket_logo"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:id="@+id/iv_picked_image22"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rocket_logo"/>
            </LinearLayout> <!-- Double Image View -->

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/singleview3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_picked_image3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rocket_logo" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/iv_picked_image32"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/rocket_logo" />
                    <ImageView
                        android:id="@+id/iv_picked_image33"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rocket_logo" />


                </LinearLayout>
            </LinearLayout> <!-- Tipple Image View -->

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/singleview4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv_picked_image41"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rocket_logo"
                        android:layout_marginEnd="8dp"/>
                    <ImageView
                        android:id="@+id/iv_picked_image42"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rocket_logo" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_picked_image43"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/rocket_logo" />
                    <ImageView
                        android:id="@+id/iv_picked_image44"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rocket_logo" />


                </LinearLayout>

            </LinearLayout> <!-- Fourth Image View -->




            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Privacy Public"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_post_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter post descroption..."
                android:maxLines="2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingVertical="15dp"
                android:layout_marginTop="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Cancel"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:letterSpacing="0"
                    android:backgroundTint="#E3E3E3"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:fontFamily="@font/circularstd_book"
                    app:cornerRadius="8dp"
                    android:stateListAnimator="@null"/>


                <View
                    android:layout_width="20dp"
                    android:layout_height="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Upload"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:letterSpacing="0"
                    android:backgroundTint="@color/colorMain"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/circularstd_book"
                    app:cornerRadius="8dp"
                    android:stateListAnimator="@null"/>



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>