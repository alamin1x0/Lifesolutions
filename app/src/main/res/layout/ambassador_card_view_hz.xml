<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="138.8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_gravity="center"
    android:layout_marginBottom="12dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ambassador_profile_img"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginStart="1.5dp"
                android:layout_marginEnd="1.5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:riv_corner_radius="15dp"
                android:src="@drawable/ambassador_avatar"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
            <View
                android:visibility="gone"
                android:id="@+id/iv_online_badge"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignEnd="@+id/ambassador_profile_img"
                android:layout_alignBottom="@+id/ambassador_profile_img"

                />
            <!--           android:background="@drawable/active_circle_view"
           -->
        </RelativeLayout>

        <TextView
            android:id="@+id/ambassador_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jhon Abrar"
            android:textAlignment="center"
            android:maxLines="1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:fontFamily="@font/popins_semi_bold"
            android:layout_gravity="center"
            android:textColor="#313450"
            android:textSize="11sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/ambassador_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cheaf Technology Officer"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#D22B52"
            android:fontFamily="@font/popins_semi_bold"
            android:textSize="8sp"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"/>

        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:orientation="horizontal"-->
        <!--        android:gravity="center"-->
        <!--        android:layout_marginTop="15dp">-->

        <!--        <ImageView-->
        <!--            android:layout_width="35dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:src="@drawable/img_girl" />-->


        <!--        <ImageView-->
        <!--            android:layout_width="35dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:src="@drawable/img_girl"-->
        <!--            android:layout_marginStart="12dp"/>-->

        <!--    </LinearLayout>-->

    </LinearLayout>
</androidx.cardview.widget.CardView>
