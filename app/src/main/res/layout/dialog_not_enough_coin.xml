<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/alert_dialog_background"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    
    <ImageView
        android:src="@drawable/ic_svg_rocket_icon"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="Sorry! Not Enough Coin"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="#FF0000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/not_enough_coin_dialog_text_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_dialog_not_enough_point"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/text_color_light"
            android:padding="10dp"
            android:text="@string/collect_5000_coins_to_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/close_button_dialog_not_enough_point"
            android:text="@string/close"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_margin="2dp"
            app:backgroundTint="@color/colorMain"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:background="@drawable/button_background_login"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/earn_button_dialog_not_enough_point"
            android:text="@string/earn"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="10dp"
            app:backgroundTint="#149A5B"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@drawable/background_write_post"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>