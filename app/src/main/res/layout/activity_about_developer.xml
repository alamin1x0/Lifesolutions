<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlinCode.ui.activities.AboutDeveloperActivity">



    <ImageButton
        android:id="@+id/back_btn_from_developer_page"
        android:onClick="onBackBtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_view_login"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_developer_facebook_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/image_developer_page" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_developer_facebook_page"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:letterSpacing="0"
        android:onClick="onClickFacebookPage"
        android:stateListAnimator="@null"
        android:text="Facebook Page"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="#3B5A94"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_facebook"
        app:iconGravity="textStart"
        app:iconPadding="15dp"
        app:iconSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_developer_website"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_developer_website"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:letterSpacing="0"
        android:onClick="onClickWebpage"
        android:stateListAnimator="@null"
        android:text="Website"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="#FF5733"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_www"
        app:iconGravity="textStart"
        app:iconPadding="15dp"
        app:iconSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circular_std_medium"
        android:text="About Developer"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn_from_developer_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_btn_from_developer_page" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/image_view_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/softlabit_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>